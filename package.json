{
  "name": "npm-sec-analyzer",
  "version": "1.0.0",
  "description": "NPM Package Malware Analysis CLI Tool using LLM for security vulnerability detection",
  "main": "dist/cli/cli.js",
  "bin": {
    "npm-sec-analyzer": "dist/cli/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:contract": "jest tests/contract",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "test:performance": "jest tests/performance",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src tests",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "npm",
    "security",
    "malware",
    "analysis",
    "cli",
    "llm",
    "vulnerability",
    "dependencies"
  ],
  "author": "NPM Security Analyzer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/npm-sec-analyzer/npm-sec-analyzer.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@nodesecure/js-x-ray": "^10.0.0",
    "@types/node": "^24.3.1",
    "@types/semver": "^7.7.1",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "commander": "^14.0.0",
    "node-cache": "^5.1.2",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "uuid": "^13.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1"
  }
}
